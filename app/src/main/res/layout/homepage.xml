<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="#F1F8E9"
    tools:context=".MainActivity"
    android:id="@+id/myLayout"
    >


    <!-- test piece -->
    <Button
        android:id="@+id/creatorButton"
        android:text="switcherino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Plant 1 main picture, water and light status -->
    <ImageButton
        android:id="@+id/plant_1"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_shape_drawable"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/plant_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/plant1" />

    <ImageView
        android:id="@+id/water1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/plant_1"
        app:layout_constraintTop_toBottomOf="@+id/plant_1"
        app:srcCompat="@android:drawable/btn_default_small" />

    <ImageView
        android:id="@+id/light1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="@+id/plant_1"
        app:layout_constraintTop_toTopOf="@+id/water1"
        app:srcCompat="@android:drawable/btn_default_small" />

    <!-- Plant 2 main picture, water and light status -->

    <ImageButton
        android:id="@+id/plant_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="150dp"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/round_shape_drawable"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/plant_3"
        app:layout_constraintEnd_toStartOf="@+id/plant_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plant_1"
        app:srcCompat="@drawable/plant2" />

    <ImageView
        android:id="@+id/water2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/plant_2"
        app:layout_constraintTop_toBottomOf="@+id/plant_2"
        app:srcCompat="@android:drawable/btn_default_small" />

    <ImageView
        android:id="@+id/light2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="@+id/plant_2"
        app:layout_constraintTop_toTopOf="@+id/water2"
        app:srcCompat="@android:drawable/btn_default_small" />

    <!-- Plant 3 main picture, water and light status -->

    <ImageButton
        android:id="@+id/plant_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/round_shape_drawable"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/plant_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plant_2"
        app:srcCompat="@drawable/plant3" />

    <ImageView
        android:id="@+id/water3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/plant_3"
        app:layout_constraintTop_toBottomOf="@+id/plant_3"
        app:srcCompat="@android:drawable/btn_default_small" />

    <ImageView
        android:id="@+id/light3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="@+id/plant_3"
        app:layout_constraintTop_toTopOf="@+id/water3"
        app:srcCompat="@android:drawable/btn_default_small" />

    <!-- Plant 4 main picture, water and light status -->

    <ImageButton
        android:id="@+id/plant_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/round_shape_drawable"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/plant_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plant_3"
        app:layout_constraintTop_toTopOf="@+id/plant_3"
        app:srcCompat="@drawable/plant4" />

    <ImageView
        android:id="@+id/water4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/plant_4"
        app:layout_constraintTop_toBottomOf="@+id/plant_4"
        app:srcCompat="@android:drawable/btn_default_small" />

    <ImageView
        android:id="@+id/light4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="@+id/plant_4"
        app:layout_constraintTop_toTopOf="@+id/water4"
        app:srcCompat="@android:drawable/btn_default_small" />



    <!-- Plant 5 main picture, water and light status -->

    <ImageButton
        android:id="@+id/plant_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/round_shape_drawable"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/plant_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plant_2"
        app:layout_constraintTop_toTopOf="@+id/plant_2"
        app:srcCompat="@drawable/plant5" />

    <ImageView
        android:id="@+id/water5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/plant_5"
        app:layout_constraintTop_toBottomOf="@+id/plant_5"
        app:srcCompat="@android:drawable/btn_default_small" />

    <ImageView
        android:id="@+id/light5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="@+id/plant_5"
        app:layout_constraintTop_toTopOf="@+id/water5"
        app:srcCompat="@android:drawable/btn_default_small" />

    <ImageView
        android:id="@+id/Fyto_logo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toTopOf="@+id/plant_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fytologo" />

    <TextView
        android:id="@+id/Humidity1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="32dp"
        android:text="HumidityTest1"
        app:layout_constraintEnd_toStartOf="@+id/WaterLevel"
        tools:layout_editor_absoluteY="104dp" />

    <TextView
        android:id="@+id/Humidity2"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginEnd="28dp"
        android:text="HumidityTest2"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="104dp" />

    <TextView
        android:id="@+id/WaterLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:text="WaterLevelTest"
        app:layout_constraintEnd_toStartOf="@+id/Humidity2"
        tools:layout_editor_absoluteY="100dp" />

    <TextView
        android:id="@+id/lightVal"
        style="@android:style/Widget.DeviceDefault.TextView"
        android:layout_width="90dp"
        android:layout_height="33dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="164dp"
        android:text="Lux Value"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plant_1" />

    <Button
        android:id="@+id/btn_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#F1F8E9"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:showText="false" />


</androidx.constraintlayout.widget.ConstraintLayout>